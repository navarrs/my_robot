
<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- 
    World File 
  -->
  <arg name="world_file" default="$(find my_robot)/world/navarrs.world"/>

  <!-- 
    Launch Gazebo World 
  -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>   

  <!-- 
    Robot pose
  -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!-- 
    Launch robot description file 
  -->
  <include file="$(find my_robot)/launch/robot_description.launch"/>

  <!-- 
    Spawn robot 
  -->
  <node name = "urdf_spawner" pkg = "gazebo_ros" type = "spawn_model" 
        respawn = "false" output ="screen" 
        args = "-urdf -param robot_description -model my_robot -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>
  
  <!-- 
    Launch rviz 
  -->
  <node name="rviz" pkg="rviz" type="rviz" respawn="false" 
        args="-d $(find my_robot)/rviz/my_robot.rviz" />
</launch>